{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist/",
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "tmp", "**.spec.ts"]
}
